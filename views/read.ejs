<%- include('partials/_header') -%>
<body class="sub_page">

  <div class="hero_area">
    <%- include('partials/_navigate') -%>
  </div>


  <!-- service section -->
  <section class="service_section layout_padding contact_section layout_padding">
    <div class="container">
      <div class="heading_container">
        <h2>
          Tum Gorevler
        </h2>
      </div>

      <div class="">
        <div class="">
          <div class="row">
            <div class="col-md-9 mx-auto">
              <div class="contact-form">
                <div class="clearfix text-center">
                  <ul class="list-inline" style="list-style: none;">
                    <li class="list-inline-item">
                      <div class="d-flex justify-content-center">
                        <a href="/users/read/filter/day"><button type="submit" class="btn_on-hover">
                          Günlük
                        </button></a>
                      </div>
                    </li>
                    <li class="list-inline-item">
                      <div class="d-flex justify-content-center">
                        <a href="/users/read/filter/week"><button type="submit" class="btn_on-hover">
                          Haftalık
                        </button></a>
                      </div>
                    </li>
                    <li class="list-inline-item">
                      <div class="d-flex justify-content-center">
                        <a href="/users/read/filter/month"><button type="submit" class="btn_on-hover">
                          Aylık
                        </button></a>
                      </div>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      
      <div class="service_container">

        <% if(tasks.length === 0) { %>
          <div class="box">
            <div class="detail-box">
              <h5>
                Görev Yok !
              </h5>
              <p>
                Henüz herhangi bir not eklemediniz.
              </p>
            </div>
          </div>
        <% } else { %>
          <% for(let i = 0; i < tasks.length; i++) { %>
            <div class="box">
              <div class="img-box">
                <h2><%= tasks[i].date.toISOString().split('T')[0]; %></h2>
              </div>
              <div class="detail-box">
                <a href="/users/read/<%= tasks[i]._id %>" style="color: #371e71;"><h5>
                  <%= tasks[i].title %>
                </h5></a>
                <p>
                  <%= tasks[i].description.substring(0, 100) + "..." %> %>
                </p>
              </div>
            </div>
          <% } %>
        <% } %>
      </div>
    </div>
  </section>
  <!-- end service section -->

  <div class="footer_bg">



    <!-- info section -->
    <section class="info_section ">
      <div class="container">
